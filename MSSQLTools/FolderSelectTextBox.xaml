<UserControl x:Class="MSSQLTools.FolderSelectTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSSQLTools"
             mc:Ignorable="d" d:DesignWidth="300" MinHeight="23" MaxHeight="23" MinWidth="300">
    <DockPanel LastChildFill="True">
        <Button x:Name="button" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="75" Click="button_Click" DockPanel.Dock="Right" Content="Button"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch" TextWrapping="NoWrap" Text="TextBox" VerticalAlignment="Stretch" VerticalContentAlignment="Center" LostFocus="TextBox_LostFocus" TextChanged="TextBox_Changed"/>
    </DockPanel>
</UserControl>
